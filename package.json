{
  "name": "uploader",
  "version": "1.0.1",
  "description": "This is a node.js express app that uses the go-ipfs client (the js-ipfs client [doesn't support](https://github.com/ipfs/js-ipfs/pull/856) the DHT yet) to upload scenes to our IPFS node.",
  "main": "src/server.js",
  "scripts": {
    "test": "tape test/*.js && standard",
    "docker:build": "docker build . -t uploader:latest",
    "docker:run": "docker run --name=ipfs-node -v $PWD:/root/uploader  -v $PWD/data:/root/.ipfs  -v ~/.ssh/id_rsa:/root/.ssh/id_rsa -p 3000:3000 -p 4001:4001 -p 5001:5001 -p 8080:8080 uploader:latest",
    "docker:vbox:run": "docker run --name=ipfs-node -p 3000:3000 -p 4001:4001 -p 5001:5001 -p 8080:8080 uploader:latest",
    "start": "nodemon src/server.js"
  },
  "author": "The Decentraland Team",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "decentraland-commons": "^2.10.0",
    "express": "^4.16.2",
    "mkdirp": "^0.5.1",
    "standard": "^10.0.3",
    "tape": "^4.8.0",
    "tempy": "^0.2.1"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "nodemon": "^1.14.12"
  }
}
